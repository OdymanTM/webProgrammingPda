    <div class="header">
        <div class="header-left">
            <img id="logo" width="20%" src="/images/logo.png" alt="App Logo">
            <span class="title">{{ pageTitle }}</span>
        </div>
        <div class="header-right"><!--
            {{#if loggedInUser}}
                <span>{{loggedInUser}}</span>
                <a href="{{logoutpath}}" style="margin-left: 20px; margin-right: 30px;">Logout</a>
            {{else}}
                <a href="{{loginpath}}" style="margin-right: 30px;">Login</a>
            {{/if}}-->
            {{#if loggedInUser}}
                <span style="padding-left: 7%;">{{loggedInUser}}</span>
                <span><button class = 'log-in-out-button' style="padding-left: 7%; margin-right: 30px;" onclick="logoutPath('{{logoutpath}}')">Logout</button></span>
                
                <!--<a href="{{logoutpath}}" style="margin-left: 20px; margin-right: 30px;">Logout</a>-->
            {{else}}
                <span style="padding-left: 7%; margin-right: 30px;"><button class = 'log-in-out-button' onclick="loginPath('{{loginpath}}')">Login</button></span>
            {{/if}}
            <span style="padding-left: 7%;"><button class = 'log-in-out-button'>Selected table: {{selectedtable}}</span>
        </div>
        <a class="button" style="color: rgba(27,93,107,1);;" href="/worker/basket">
        <i class="fa-solid fa-basket-shopping"></i><span style="text-decoration: none;" >({{numberOfBasketItems}})</span>
        </a>
    </div>

<script>
    function loginPath(loginpath){
        window.location.href = loginpath;
    }

    function logoutPath(logoutpath){
        window.location.href = logoutpath;
    }

    document.getElementById("logo").addEventListener("click", function(){
        window.location.href = '/worker/menu';
    })
</script>