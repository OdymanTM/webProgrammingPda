     

    <div class = 'header'>
        <img id="logo" width="20%" src="/images/logo.png" alt="App Logo">
        <span class = "title">{{ pageTitle }}</span>
        {{#if loggedInUser}}
                <span style="padding-left: 7%;">Welcome, {{loggedInUser}}</span>
                <a href={{logoutpath}}><span>Logout</span></a>
