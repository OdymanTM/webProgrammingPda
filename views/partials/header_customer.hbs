    <div class = 'header'>
        <div class="header-left">
            <img id="logo" width="20%" src="/images/logo.png" alt="App Logo">
            <span class = "title">{{ pageTitle }}</span>
        </div>
        <div class=" header-middle">
            {{#if loggedInUser}}
                <span style="padding-left: 7%;">Logged in as: {{loggedInUser}}</span>
                <button class="btn btn-primary" style="background-color: rgba(27,93,107,1);" onclick="logoutPath('{{logoutpath}}')">Logout</button>
                
                <!--<a href="{{logoutpath}}" style="margin-left: 20px; margin-right: 30px;">Logout</a>-->
            {{else}}
                <button class="btn btn-primary" style="background-color: rgba(27,93,107,1);" onclick="loginPath('{{loginpath}}')">Login</button>
            {{/if}}
        </div>
        <div class="header-right-customer">
            <a class="button" style="color: rgba(27,93,107,1);" href="/basket">
            <i class="fa-solid fa-basket-shopping"></i>
            </a>
        </div>
    </div>

<script>
    function loginPath(loginpath){
        window.location.href = loginpath;
    }

    function logoutPath(logoutpath){
        window.location.href = logoutpath;
    }

    document.getElementById("logo").addEventListener("click", function(){
        window.location.href = '/menu';
    })
</script>